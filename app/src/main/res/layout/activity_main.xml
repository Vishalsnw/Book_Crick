<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bollywood Simulator"
        android:textColor="#FFD700"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:padding="12dp" />

    <TextView
        android:id="@+id/yearBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year 1"
        android:textColor="#FFD700"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/gold_border"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Start Game"
        app:backgroundTint="#FFD700"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:spacing="4dp">
        <Button
            android:id="@+id/oscarButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ†"
            android:backgroundTint="#DAA520"
            android:textColor="#000000" />
        <Button
            android:id="@+id/incomeButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ’°"
            android:backgroundTint="#DAA520"
            android:textColor="#000000" />
        <Button
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ‘¤"
            android:backgroundTint="#DAA520"
            android:textColor="#000000" />
        <Button
            android:id="@+id/achieveButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ…"
            android:backgroundTint="#DAA520"
            android:textColor="#000000" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF8A80"
                android:text=""
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:padding="12dp"
                android:background="#1E1E1E"
                android:elevation="2dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/topMoviesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:background="#1E1E1E"
                android:padding="12dp"
                android:elevation="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¬ Top Movies"
                    android:textColor="#FFD700"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/topMoviesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#E0E0E0"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Player Balances"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">
                <TextView
                    android:id="@+id/statsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#E0E0E0"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="2dp"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/oscarAnimationOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2121212"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="25dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="24dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ† OSCAR NOMINEES"
            android:textColor="#FFD700"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">
            <TextView
                android:id="@+id/nomineeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:paddingBottom="40dp"/>
        </ScrollView>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap anywhere to continue..."
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>
    </LinearLayout>
</LinearLayout>
