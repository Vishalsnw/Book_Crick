<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bollywood Simulator"
        android:textColor="#FFD700"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:padding="12dp" />

    <TextView
        android:id="@+id/yearBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year 1"
        android:textColor="#FFD700"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@drawable/gold_border"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Start Game"
        app:backgroundTint="#FFD700"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:spacing="4dp">
        <Button
            android:id="@+id/oscarButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ†"
            android:backgroundTint="#DAA520"
            android:textColor="#000000" />
        <Button
            android:id="@+id/incomeButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ’°"
            android:backgroundTint="#DAA520"
            android:textColor="#000000" />
        <Button
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ‘¤"
            android:backgroundTint="#DAA520"
            android:textColor="#000000" />
        <Button
            android:id="@+id/achieveButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ…"
            android:backgroundTint="#DAA520"
            android:textColor="#000000" />
    </LinearLayout>

    <TextView
        android:id="@+id/eventText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF8A80"
        android:text=""
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:padding="12dp"
        android:background="#1E1E1E"
        android:elevation="2dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/topMoviesSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:background="#1E1E1E"
        android:padding="12dp"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¬ Top Movies"
            android:textColor="#FFD700"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/topMoviesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#E0E0E0"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Player Balances"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/statsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#E0E0E0"
                        android:fontFamily="monospace"
                        android:lineSpacingExtra="2dp"
                        android:textSize="13sp" />
                </ScrollView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/oscarAnimationOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6121212"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ† OSCAR NOMINEES"
            android:textColor="#FFD700"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:maxHeight="400dp">
            <TextView
                android:id="@+id/nomineeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:lineSpacingExtra="8dp"/>
        </ScrollView>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Click anywhere to skip)"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</FrameLayout>
</LinearLayout>
